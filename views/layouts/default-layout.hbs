<html>
<head prefix="og: http://ogp.me/ns# fb: http://ogp.me/ns/fb#">
	{{> head-meta}}
	<meta content='{{setting.keywords}}' name='keywords'/>
	{{> head-files}}
	{{> ga}}
	{{{block "head"}}}
	<style type="text/css">
		#bug, #links, #tag-navigation { position: fixed; }
	</style>
	<script type="text/javascript">
		window.feature = { sideMenu: true, postMenu: false, twitter: true, facebook: false, timestamp: {{setting.timestamp}} };
	</script>
</head>
<body>
	<div id="header" class="content{{#if headerCSS}} {{headerCSS}}{{/if}}">
		<!--googleoff: index-->
		<div id="mobile-menu"></div>
		<!--googleon: index-->
		<div id="top-bar">
			<h1>{{title}}</h1>
			{{#if subtitle}}<h4>{{subtitle}}</h4>{{/if}}
			<div id="mobile-menu-button">{{{icon "menu-hamburger"}}}</div>
		</div>
	</div>
	{{> side-menu}}
	{{> bug}}
	{{{body}}}
	{{> footer}}
</body>
</html>