<li class="set-summary">
	<a class="title" href="/{{slug}}">{{title}}{{#if subTitle}}: <span class="subtitle">{{subTitle}}</span>{{/if}}</a>
	<div class="thumb">
	{{#if bigThumb}}
		<a href="/{{slug}}"><img src="{{bigThumb}}"/></a>
	{{/if}}
	</div>
	{{#if photoCoordinates}}
	<div class='map'>
		<a href="/{{slug}}/map" rel="nofollow"><img src="http://maps.googleapis.com/maps/api/staticmap?&maptype=terrain&scale=1&sensor=false&size=500x200&key={{setting.google.apiKey}}&markers={{photoCoordinates}}"/></a>
	</div>
	{{/if}}
	<div class="detail">
	{{#if photoCount}}
		<div class="photo-count">{{photoCount}} photos</div>
	{{/if}}
		<a class="link" href="/{{slug}}">trailimage.com/{{slug}}</a>
		<p class="summary">{{description}}</p>
		<ul class="tags">
			{{#each tags}}
			<li><a href="/tag/{{makeSlug this}}">{{this}}</a></li>
			{{/each}}
		</ul>
	</div>
	<div class="clear"></div>
</li>