{{#if meta.previous}}
<!--googleoff: index-->
<div class='previous'>
{{#if meta.previousIsPart}}
	<h4>{{{icon 'chevron-left'}}} Part {{meta.previous.part}}</h4>
	<a href="/{{meta.previous.sl ug}}">{{meta.previous.subTitle}}</a>
{{else}}
	<h4>{{{icon 'chevron-left'}}} Previous</h4>
	<a href="/{{meta.previous.slug}}">{{meta.previous.title}}</a>
{{/if}}
</div>
<!--googleon: index-->
{{/if}}
{{#if meta.next}}
<!--googleoff: index-->
<div class='next'>
