{{#if post.previous}}
<!--googleoff: index-->
<div class='previous'>
{{#if post.previousIsPart}}
	<h4>{{{icon 'chevron-left'}}} Part {{post.previous.part}}</h4>
	<a href="/{{post.previous.slug}}">{{post.previous.subTitle}}</a>
{{else}}
	<h4>{{{icon 'chevron-left'}}} Previous</h4>
	<a href="/{{post.previous.slug}}">{{post.previous.title}}</a>
{{/if}}
</div>
<!--googleon: index-->
{{/if}}
{{#if post.next}}
<!--googleoff: index-->
<div class='next'>
{{#if post.nextIsPart}}
	<h4>Part {{post.next.part}}{{{icon 'chevron-right'}}}</h4>
	<a href="/{{post.next.slug}}">{{post.next.subTitle}}</a>
{{else}}
	<h4>Next {{{icon 'chevron-right'}}}</h4>
	<a href="/{{post.next.slug}}">{{post.next.title}}</a>
{{/if}}
</div>
<!--googleon: index-->
{{/if}}