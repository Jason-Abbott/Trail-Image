	<a href="/{{meta.next.slug}}">{{meta.next.subTitle}}</a>
{{else}}
	<h4>Next {{{icon 'chevron-right'}}}</h4>
	<a href="/{{meta.next.slug}}">{{meta.next.title}}</a>
