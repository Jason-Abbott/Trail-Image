<ul class="links">
	<li><a href="/">Home {{{icon 'home'}}}</a></li>
	<li><a href="/about">About {{{icon 'info-sign'}}}</a></li>
	<li><a href="/photo-tag">Photo Tags {{{icon 'tags'}}}</a></li>
	<li><a href="/ruminations">Ruminations {{{icon 'leaf'}}}</a></li>
	<li><a href="/ruminations">Contact {{{icon 'send'}}}</a></li>
	<li><a href="/rss" class="feed-icon">RSS Feed {{{icon 'fire'}}}</a></li>
	<li><a href="https://twitter.com/trailimage">Twitter {{{icon 'comment'}}}</a></li>
</ul>

<ul class="tag-list">
{{#each library.tags}}
	<li class="{{this.title}}">{{{icon this.icon}}}{{this.title}}</li>
{{/each}}
</ul>

<div class="tags">
{{#each library.tags}}
	<ul class="{{this.title}}">
	{{#this.tags}}
		<li><a href="/tag/{{this.slug}}">{{this.title}}</a>({{this.posts.length}})</li>
	{{/this.tags}}
	</ul>
{{/each}}
</div>

<div class="close">{{{icon 'remove'}}}</div>