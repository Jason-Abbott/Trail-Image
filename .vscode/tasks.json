{
   // See https://go.microsoft.com/fwlink/?LinkId=733558
   // for the documentation about the tasks.json format
   "version": "2.0.0",
   "suppressTaskName": true,
   "tasks": [
      {
         "taskName": "Run Server",
         "command": "./node_modules/.bin/nodemon ./lib/app.js",
         "type": "shell",
         "isBackground": true
      },
      {
         "taskName": "Module Install",
         "command": "npm install",
         "type": "shell"
      },
      {
         "taskName": "Module Update",
         "command": "npm update",
         "type": "shell"
      },
      {
         "taskName": "Test",
         "command": "npm run test-pretty",
         "type": "shell",
         "group": "test",
         "problemMatcher": []
      },
      {
         "taskName": "Build and Watch Client",
         "command": "npm run watch",
         "type": "shell",
         "isBackground": true,
         "problemMatcher": []
      },
      {
         "taskName": "Build and Watch Server",
         "group": "build",
         "command": "./node_modules/.bin/tsc -p tsconfig.node.json",
         "type": "shell",
         "problemMatcher": "$tsc"
      }
   ]
}