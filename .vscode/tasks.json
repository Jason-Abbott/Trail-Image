{
   // See https://go.microsoft.com/fwlink/?LinkId=733558
   // for the documentation about the tasks.json format
   "version": "2.0.0",
   "tasks": [
      {
         "label": "Test",
         "command": "./node_modules/.bin/jest",
         "type": "shell",
         "group": "test",
         "problemMatcher": []
      },
      {
         "label": "Build and Watch Client",
         "script": "watch",
         "group": "build",
         "type": "npm",
         "problemMatcher": ["$tsc"]
      },
      {
         "label": "Build",
         "group": "build",
         "command": "./node_modules/.bin/tsc -p tsconfig.node.json",
         "type": "shell",
         "problemMatcher": "$tsc"
      },
      {
         "label": "Run Server",
         "group": {
            "kind": "build",
            "isDefault": true
         },
         "command": "./node_modules/.bin/nodemon",
         "args": [
            "--exec",
            "./node_modules/.bin/ts-node",
            "--",
            "./src/app.ts"
         ],
         "type": "shell",
         "problemMatcher": "$tsc"
      },
      {
         "label": "Build Server",
         "type": "npm",
         "group": "build",
         "script": "prepare",
         "problemMatcher": ["$tsc"]
      }
   ]
}
