{
   // See https://go.microsoft.com/fwlink/?LinkId=733558
   // for the documentation about the tasks.json format
   "version": "2.0.0", 
   "isShellCommand": true,
   "showOutput": "always",
   "suppressTaskName": true,
   "tasks": [
      {
         "taskName": "Run server",
         "command": "node app.js",
         "options": {
            "cwd": "${workspaceRoot}"
         }
      },
      {
         "taskName": "Install Modules",
         "command": "npm install"
      },
      {
         "taskName": "Update Modules",
         "command": "npm update"
      },
      {
         "taskName": "Test",
         "command": "npm run test-pretty",
         "isTestCommand": true
      },
      {
         "taskName": "Build and Watch",
         "command": "npm run watch",
         "isBuildCommand": true,
         "isBackground": true
      }
   ]
}