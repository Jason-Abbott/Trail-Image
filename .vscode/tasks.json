{
   // See https://go.microsoft.com/fwlink/?LinkId=733558
   // for the documentation about the tasks.json format
   "version": "0.1.0",
   "command": "npm",
   "isShellCommand": true,
   "showOutput": "always",
   "suppressTaskName": true,
   "tasks": [
      {
         "taskName": "Install Modules",
         "args": ["install"]
      },
      {
         "taskName": "Update Modules",
         "args": ["update"]
      },
      {
         "taskName": "Test",
         "args": ["run", "test-pretty"],
         "isTestCommand": true
      },
      {
         "taskName": "Build and Watch",
         "args": ["run", "watch"],
         "isBuildCommand": true,
         "isWatching": true
      }
   ]
}