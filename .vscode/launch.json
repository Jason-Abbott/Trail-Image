{
   "version": "0.2.0",
   "configurations": [
      // http://www.mithunvp.com/typescript-tutorials-setting-visual-studio-code/
      {
         "name": "Server (precompiled)",
         "type": "node",
         "request": "launch",
         "program": "${workspaceRoot}/lib/app.js",
         "protocol": "inspector",
         "sourceMaps": true,
         "outFiles": ["${workspaceRoot}/lib"],
         "cwd": "${workspaceRoot}"
      },
      {
         "name": "Server (ts-node)",
         "type": "node",
         "request": "launch",
         "args": ["${workspaceRoot}/src/app.ts"],
         "runtimeArgs": ["--nolazy", "-r", "ts-node/register"],
         "sourceMaps": true,
         "cwd": "${workspaceRoot}",
         "protocol": "inspector"
      },
      {
         // https://github.com/whitecolor/ts-node-dev/issues/9
         // https://github.com/whitecolor/ts-node-dev/issues/64
         "name": "Server (ts-node-dev)",
         "type": "node",
         "request": "launch",
         "args": ["${workspaceRoot}/src/app.ts"],
         "runtimeExecutable": "${workspaceRoot}/node_modules/.bin/ts-node-dev",
         //"runtimeArgs": ["--nolazy", "-r", "ts-node/register"],
         "sourceMaps": true,
         "cwd": "${workspaceRoot}",
         "protocol": "inspector",
         "restart": true
      },
      {
         "name": "Jest",
         "type": "node",
         "request": "launch",
         "port": 9229,
         "address": "localhost",
         //"program": "${workspaceRoot}/node_modules/.bin/jest",
         "runtimeArgs": [
            "--inspect-brk",
            "./node_modules/jest/bin/jest.js",
            "--runInBand",
            "post.test.ts"
         ],
         //"args": ["post"],
         "cwd": "${workspaceRoot}"
      },
      {
         "name": "Gulp",
         "type": "node",
         "request": "launch",
         "program": "${workspaceRoot}/node_modules/gulp/bin/gulp.js",
         "cwd": "${workspaceRoot}",
         "protocol": "inspector",
         "runtimeExecutable": null,
         "stopOnEntry": true,
         "args": ["js"]
      },
      {
         "type": "node",
         "request": "launch",
         "name": "vscode-jest-tests",
         "stopOnEntry": false,
         "cwd": "${workspaceRoot}",
         "program": "${workspaceRoot}/node_modules/.bin/jest",
         "args": ["--runInBand"],
         "console": "integratedTerminal",
         "internalConsoleOptions": "neverOpen",
         "env": {
            "EMAIL_CONTACT": "nobody@nowhere.com"
         }
      }
   ]
}
