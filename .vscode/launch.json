{
   "version": "0.2.0",
   "configurations": [
      // http://www.mithunvp.com/typescript-tutorials-setting-visual-studio-code/
      {
         "name": "Node Server",
         "type": "node",
         "request": "launch",
         "program": "${workspaceRoot}/lib/app.js",
         "protocol": "inspector",
         "sourceMaps": true,
         "outFiles": ["${workspaceRoot}/lib"],
         "cwd": "${workspaceRoot}"
      },
      {
         "name": "Attach to Node",
         "type": "node",
         "request": "attach",
         "port": 9229
      },
      // https://github.com/Microsoft/vscode/issues/13405
      // https://github.com/gulp-sourcemaps/gulp-sourcemaps
      {
         "name": "Chrome Debug",
         "type": "chrome",
         "request": "launch",
         "url": "http://localhost:3000/map/",
         "userDataDir": "${workspaceRoot}/.vscode/chrome",
         "webRoot": "${workspaceRoot}/dist",
         "showAsyncStacks": true,
         "skipFiles": ["jquery.js"],
         "sourceMaps": true
         // "sourceMapPathOverrides": {
         //    "/source/*": "${workspaceRoot}/*"
         // }
      },
      {
         "name": "Mocha Test",
         "type": "node",
         "request": "launch",
         "program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
         "cwd": "${workspaceRoot}",
         "runtimeExecutable": null,
         "stopOnEntry": false,
         "protocol": "inspector",
         "sourceMaps": true,
         "outFiles": ["${workspaceRoot}/lib"],
         //"args": ["test/**/*.js", "--no-timeouts"]
         //"args": ["test/factory/*", "--no-timeouts"]
         //"args": ["test/map/geojson*", "--no-timeouts"]
         "args": ["test/logger*", "--no-timeouts"]
      },
      {
         "name": "Gulp",
         "type": "node",
         "request": "launch",
         "program": "${workspaceRoot}/node_modules/gulp/bin/gulp.js",
         "cwd": "${workspaceRoot}",
         "protocol": "inspector",
         "runtimeExecutable": null,
         "stopOnEntry": true,
         "args": ["ts"]
      }
   ]
}