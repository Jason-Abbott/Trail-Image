{
   "version": "0.2.0",
   "configurations": [
      // http://www.mithunvp.com/typescript-tutorials-setting-visual-studio-code/
      {
         "name": "Node Server",
         "type": "node",
         "request": "launch",
         "program": "${workspaceRoot}/lib/app.js",
         "protocol": "inspector",
         "sourceMaps": true,
         "outFiles": ["${workspaceRoot}/lib"],
         "cwd": "${workspaceRoot}"
      },
      {
         "name": "Jest",
         "type": "node",
         "request": "launch",
         "port": 9229,
         "address": "localhost",
         //"program": "${workspaceRoot}/node_modules/.bin/jest",
         "runtimeArgs": [
            "--inspect-brk",
            "./node_modules/jest/bin/jest.js",
            "--runInBand",
            "post.test.ts"
         ],
         //"args": ["post"],
         "cwd": "${workspaceRoot}"
      },
      {
         "name": "Gulp",
         "type": "node",
         "request": "launch",
         "program": "${workspaceRoot}/node_modules/gulp/bin/gulp.js",
         "cwd": "${workspaceRoot}",
         "protocol": "inspector",
         "runtimeExecutable": null,
         "stopOnEntry": true,
         "args": ["js"]
      }
   ]
}
